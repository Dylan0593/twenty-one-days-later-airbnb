<h1>Your Bookings</h1>

<div class="booking_container">
  <% @bookings.each do |booking| %>
    <div class="booking_box">
      <div class="booking_image">
        <%= image_tag "test.png", alt: "test", class: "superpower_image" %>
      </div>
      <div class="booking_info">
        <p class="booking_detail">Superpower:<%= booking.superpower.name %></p>
        <p class="booking_detail">Start Date:<%= booking.start_date %></p>
        <p class="booking_detail">End Date:<%= booking.end_date %></p>
        <p class="booking_detail">Comment:<%= booking.comment %></p>
        <p class="booking_detail">Total Price:Â£<%= booking.total_price %></p>
        <%= link_to "Delete Booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  leave a review
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

       <div class="review-form">
        <%= simple_form_for [booking.superpower,@review] do |f| %>
          <%= f.input :comment, label_html: {class: "d-none"}, placeholder: "review here....", class: "review" %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>






