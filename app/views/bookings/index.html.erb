<div class="superpowers-container">

<h1>Your Bookings</h1>

<% @bookings.each do |booking| %>
<div class="superpower-card">
  <div class="booking">
    <p><strong>Superpower:</strong> <%= booking.superpower.name %></p>
    <p><strong>Start Date:</strong> <%= booking.start_date %></p>
    <p><strong>End Date:</strong> <%= booking.end_date %></p>
    <p><strong>Comment:</strong> <%= booking.comment %></p>
  </div>
  <hr>

  </div>

<% end %>
</div>

  <%= link_to "Delete Booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
<% end %>


<%= link_to "Back", superpowers_path %>

